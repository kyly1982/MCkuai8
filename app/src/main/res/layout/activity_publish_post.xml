<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white">


    <FrameLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@null">

        <LinearLayout
            android:id="@+id/ll_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:paddingTop="10dp"
                android:text="选择版块"
                android:textColor="@color/textColorSecondary" />

            <GridView
                android:id="@+id/gv_forums"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnWidth="90dp"
                android:gravity="center"
                android:horizontalSpacing="10dp"
                android:numColumns="auto_fit"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:stretchMode="columnWidth"
                android:verticalSpacing="8dp"></GridView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:text="选择类型"
                android:textColor="@color/textColorSecondary" />

            <GridView
                android:id="@+id/gv_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnWidth="80dp"
                android:gravity="center"
                android:horizontalSpacing="10dp"
                android:numColumns="auto_fit"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:stretchMode="columnWidth"
                android:verticalSpacing="8dp"></GridView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_checkedType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="版块:"
                android:textColor="@color/textColorSecondary" />

            <TextView
                android:id="@+id/tv_forum_Checked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/textGreen"
                android:textColor="@color/color_white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="类型:"
                android:textColor="@color/textColorSecondary" />

            <TextView
                android:id="@+id/tv_type_Checked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/textGreen"
                android:textColor="@color/color_white" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_pics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imgbtn_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@mipmap/btn_addpic" />
    </LinearLayout>

    <EditText
        android:id="@+id/edt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_top"
        android:background="@null"
        android:hint="标题"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/text_accent" />

    <EditText
        android:id="@+id/edt_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll_pics"
        android:layout_below="@id/edt_title"
        android:background="@null"
        android:ems="10"
        android:gravity="top"
        android:hint="内容"
        android:imeOptions="actionSend"
        android:minLines="5"
        android:padding="10dp"
        android:textColor="@color/textColorPrimary">
    </EditText>


</RelativeLayout>