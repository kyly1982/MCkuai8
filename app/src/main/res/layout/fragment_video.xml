<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:clickable="true"
                android:orientation="vertical">


    <RadioGroup
        android:id="@+id/video_type"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_below="@id/community_forumlist"
        android:background="@color/color_white"
        android:orientation="horizontal" >


        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/type_new"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:background="@null"
            android:gravity="center"
            android:checked="true"
            android:text="最新"
            android:textColor="@color/selector_green_and_grey" />

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/type_hot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:background="@null"
            android:gravity="center"
            android:text="最热"
            android:textColor="@color/selector_green_and_grey" />
    </RadioGroup>

    <View
        android:id="@+id/divier"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/video_type"
        android:background="@color/divierColor_Dark"/>

    <com.malinskiy.superrecyclerview.SuperRecyclerView
        android:id="@+id/video_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1px"
        android:layout_below="@id/divier"
        android:layout_alignParentBottom="true"
        app:layout_empty="@layout/emptyview_nodata"
        />

</RelativeLayout>